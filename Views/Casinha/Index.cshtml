<table>
    <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Telefone</th>
    </tr>
    @foreach(var cliente in Model)
    {
        <tr>
            <td>@cliente.Nome</td>
            <td>@cliente.Endereco</td>
            <td>@cliente.Telefone</td>
            <td><a asp-action="Editar" asp-route-id="@cliente.Cliente_id">Editar</a></td>
            <td><a asp-action="Excluir" asp-route-id="@cliente.Cliente_id">Exluir</a></td>
        </tr>
    }
</table>